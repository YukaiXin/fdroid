<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActivityAnimation" parent="@android:style/Animation.Activity" />

    <style name="WindowAnimation" parent="@android:style/Animation" />

    <style name="ActivityAnimation.LeftRight">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="ActivityAnimation.TopBottom">
        <item name="android:activityOpenEnterAnimation">@anim/bottom_to_top</item>
        <item name="android:activityOpenExitAnimation">@anim/none</item>
        <item name="android:activityCloseEnterAnimation">@anim/none</item>
        <item name="android:activityCloseExitAnimation">@anim/top_to_bottom</item>
    </style>

    <style name="WindowAnimation.LeftRight">
        <item name="android:windowEnterAnimation">@anim/left_to_right</item>
        <item name="android:windowExitAnimation">@anim/right_to_left</item>
    </style>


    <style name="WindowAnimation.RightIn_RightOut">
        <item name="android:windowEnterAnimation">@anim/slide_right_in</item>
        <item name="android:windowExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="WindowAnimation.TopBottom">
        <item name="android:windowEnterAnimation">@anim/bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/top_to_bottom</item>
    </style>

    <style name="WindowAnimation.Fade">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="WindowAnimation.Popup">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>
</resources>
